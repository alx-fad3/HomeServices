<Window x:Class="HomeServices.Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeServices.Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content="Add folders with music:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <ProgressBar x:Name="pbLoading" HorizontalAlignment="Left" Height="13" Margin="10,104,0,0" VerticalAlignment="Top" Width="235"/>
        <ListBox x:Name="lbDirectories" HorizontalAlignment="Left" Height="63" Margin="10,36,0,0" VerticalAlignment="Top" Width="235"/>
        <Button x:Name="btnGo" Content="Go" HorizontalAlignment="Left" Margin="170,122,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.899,0.378" Click="btnGo_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="90,122,0,0" VerticalAlignment="Top" Width="75" Click="btnDelete_Click"/>

    </Grid>
</Window>
